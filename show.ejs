<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>


    <div class="w3-container w3-center">
            <div class="w3-panel w3-red">
                  <h2>Lista de Musicas</h2>
            </div> 

        <table class="w3-table-all w3-centered w3-hoverable">
                <thead>
                <tr class="w3-red">
        
                        <th>Nome</th>
                        <th>Tipo</th>
                        <th>Preco</th>
                        <td></td>
                        <td><form action="/"> 
                            <button href="/" class="w3-button w3-light-grey w3-round-xlarge">Retroceder</button>
                            </form>
                        </td>
                        <% musicas.forEach(function(details) { %>
            
                <tr>
                        <td><%= details.name %></td>
                        <td><%= details.type %></td>
                        <td><%= details.price%></td>
                
                        <td><a href="/edit/<%= details._id %>"> EDITAR </a></td>
                        <td><a href="/delete/<%= details._id %>"> ELIMINAR </a></td>
                </tr>
                    <% } )%>
                </tr>

                </thead>
        </table>
    </div>

</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Editar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>



    <div class="w3-container w3-center">
        <div class="w3-panel w3-red">
              <h2>Editar Musica</h2>
        </div>


      <table class="w3-table-all w3-centered w3-hoverable">
              <thead>
                  <tr class="w3-red">

                  <% musicas.forEach(function(details) { %>
                   
                  <form action="/edit/<%= details._id %>" method="post" >
                    <td><input type="text" placeholder="Nome"  name="name" value="<%= details.name %>"></td>
                    <td><input type="text" placeholder="Tipo"  name="type" value="<%=details.type%>"></td>
                    <td><input type="text" placeholder="Preco" name="price" value="<%=details.price%>"></td>
                    <td><button type="submit" class="w3-button w3-light-grey w3-round-xlarge">Editar</button></td>
                  </form>
                  <form action= "/show"> 
                    <td><button href="/show" class="w3-button w3-light-grey w3-round-xlarge">Retroceder</button></td>
                  </form>
                  <% }) %>

              </thead>    
      </table>

</body>
</html>